  <section id="news">
    <div class="inner">
      <h1>News<span class="title-rb">掲示板</span></h1>
      <div class="news-wrap">
        <h2><span class="text-white">最新のニュース</span></h2>
        <div class="threds">
          <% if user_signed_in? %>
            <%= link_to '新規投稿', new_thred_path , class:"new-btn"%>
          <% end %>
          <% @threds.each do |thred|%>
            <ul>
              <li>
                <%= link_to(thred_path(thred.id)) do %>
                  <span class="thred-title"><%= thred.title%></span>
                  <span class="date"><%= thred.created_at.strftime('%m/%d')%></span>
                  <span class="thred-content"><%= simple_format(thred.content.truncate(15)) %></span>
                <% end %>
                <% if user_signed_in? %>
                  <%= link_to '編集', edit_thred_path(thred) %>
                  <%= link_to '削除', thred_path(thred) %>
                <%end%>
              </li>
            </ul>
          <% end %>
          <div><%= link_to '一覧をみる ＞', threds_path ,class:"index-btn"%></div>
        </div>
      </div>
    </div>
  </section>

